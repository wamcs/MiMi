<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@id/display_item_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_activity_item_height"
        android:layout_margin="@dimen/display_event_item_margin"
        app:cardCornerRadius="@dimen/display_event_item_corner">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/display_event_item_image_height"
                android:background="@mipmap/need_to_remove"
                android:id="@id/display_item_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/display_item_title_text"
                android:textSize="@dimen/display_event_item_title_text_size"
                android:text="测试"
                android:textStyle="bold"
                android:textColor="@color/white10"
                android:layout_margin="@dimen/display_event_item_text_margin"
                android:layout_alignBottom="@id/display_item_image"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/display_event_item_image_height"
                android:background="#90000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_finish"
                android:textColor="@color/white10"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:id="@id/display_item_tags_container"
                android:layout_margin="@dimen/display_event_item_tag_margin"
                android:layout_alignParentEnd="true"/>

            <LinearLayout
                android:layout_below="@id/display_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@id/publish_activity_finished_item_grade"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>